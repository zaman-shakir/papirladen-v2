<header class="sticky top-0 z-50 bg-[#fcfaf8]/95 backdrop-blur-md border-b border-[#f3eee7]">
  <div class="max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20 gap-4">
      <!-- Logo -->
      <div class="flex items-center gap-3 shrink-0 cursor-pointer">
        <div class="size-10 bg-primary rounded-full flex items-center justify-center text-text-main shadow-playful hover:animate-bounce">
          <span class="material-symbols-outlined text-2xl font-bold">sentiment_satisfied</span>
        </div>
        <h1 class="text-text-main text-2xl font-extrabold tracking-tight hidden sm:block">Papirladen</h1>
      </div>
      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-1 lg:gap-2">
        <a class="px-4 py-2 rounded-full text-sm font-bold text-text-main hover:bg-accent-blue/50 transition-colors" href="#">Rengøring</a>
        <a class="px-4 py-2 rounded-full text-sm font-bold text-text-main hover:bg-accent-green/50 transition-colors" href="#">Kontor</a>
        <a class="px-4 py-2 rounded-full text-sm font-bold text-text-main hover:bg-accent-pink/50 transition-colors" href="#">Fødevarer</a>
        <a class="px-4 py-2 rounded-full text-sm font-bold text-red-600 bg-red-50 hover:bg-red-100 transition-colors" href="#">Tilbud</a>
      </nav>
      <!-- Actions -->
      <div class="flex items-center gap-3 sm:gap-4 shrink-0">
        <!-- Search (Icon only on mobile, expanded on desktop) -->
        <div class="relative hidden sm:block">
          <input class="pl-10 pr-4 py-2.5 bg-[#f3eee7] border-none rounded-full w-48 lg:w-64 focus:ring-2 focus:ring-primary focus:bg-white transition-all text-sm" placeholder="Søg efter varer..." type="text"/>
          <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-sub text-[20px]">search</span>
        </div>
        <button class="sm:hidden p-2 rounded-full hover:bg-gray-100">
          <span class="material-symbols-outlined">search</span>
        </button>
        <button class="hidden sm:flex items-center justify-center size-10 rounded-full hover:bg-gray-100 text-text-main transition-colors">
          <span class="material-symbols-outlined">person</span>
        </button>
        <!-- Cart -->
        <button class="group relative flex items-center gap-2 bg-primary px-4 py-2.5 rounded-full text-text-main font-bold shadow-playful hover:shadow-playful-hover hover:-translate-y-0.5 transition-all">
          <span class="material-symbols-outlined">shopping_bag</span>
          <span class="text-sm hidden sm:inline">Kurv</span>
          <span class="absolute -top-1 -right-1 bg-white border-2 border-primary text-[10px] size-5 flex items-center justify-center rounded-full font-black">{{ cart.item_count }}</span>
        </button>
        <button class="md:hidden p-2 rounded-full hover:bg-gray-100">
          <span class="material-symbols-outlined">menu</span>
        </button>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}